<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itcast.mapper.OrderSettingMapper">
    <insert id="addOrderSetting">
        insert into t_ordersetting(orderDate,number,reservations) values (#{orderDate},
        #{number},#{reservations})
    </insert>


    <update id="editOrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>
    <select id="findCountByDate" resultType="java.lang.Integer">
        select count(*) from t_ordersetting where orderDate =#{orderDate}
    </select>
    <select id="findByMonth" resultType="com.itcast.pojo.OrderSetting">
        select * from t_ordersetting where orderDate between #{start} and #{end}
    </select>


</mapper>